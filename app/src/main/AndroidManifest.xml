<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bbs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BBS">
        <activity
            android:name=".start"
            android:label="@string/app_name"
            android:theme="@style/Theme.BBS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/app_name"
            android:theme="@style/Theme.BBS.NoActionBar">
        </activity>
        <activity android:name=".ui.login.Register"></activity>
        <activity android:name=".ui.login.ShowIcon"></activity>
        <activity android:name=".ui.personal.UpdatePassword"></activity>
        <activity android:name=".ui.home.PostDetail"></activity>
        <activity android:name=".ui.home.CommentDetail"></activity>
    </application>

</manifest>